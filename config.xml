<?xml version='1.0' encoding='utf-8'?>
<widget id="com.aviva.travel" version="4.2.0" android-versionCode="42000" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Aviva Singapore Travel</name>
    <description>
        Aviva Singapore Travel 
    </description>
    <author email="tao_liu@aviva-asia.com" href="">
    </author>
    <content src="https://login.aviva.com.sg/gi" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://login.aviva.com.sg/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <!-- icons for android-->
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <!-- <icon src="res/icons/android/icon-ldpi.png" density="ldpi" />
        <icon src="res/icons/android/icon-mdpi.png" density="mdpi" />
        <icon src="res/icons/android/icon-hdpi.png" density="hdpi" />
        <icon src="res/icons/android/icon-xhdpi.png" density="xhdpi" />
        <icon src="res/icons/android/icon-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icons/android/icon-xxxhdpi.png" density="xxxhdpi" /> -->

        <icon src="res/icons/android/icon.png" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
